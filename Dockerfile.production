FROM nvidia/cuda:12.2.0-runtime-ubuntu22.04 AS runtime
RUN apt-get update && apt-get install -y \
    curl ca-certificates \
    libgomp1 \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*
WORKDIR /app
# Binary is mounted from host via docker-compose volume
# Models are mounted from host via docker-compose volume
EXPOSE 9000 9001 9002 8080
CMD ["fabstir-llm-node"]
